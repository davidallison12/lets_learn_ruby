<p style="color: green"><%= notice %></p>

<% content_for :title, "Notes" %>

<h1>Notes</h1>

<div id="notes">
  <% @notes.each do |note| %>
    <%= render note %>
    <p>
      <%= link_to "Show this note", note %>
    </p>
    <%= button_to "Toggle Pin", toggle_pin_note_path(note), method: :patch, class: "btn"%>
    
  <% end %>
</div>

<%= link_to "New note", new_note_path %>
